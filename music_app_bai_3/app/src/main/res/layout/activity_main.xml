<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/istockphoto"
        android:scaleType="fitStart" />

    <TextView
        android:textStyle="bold"
        android:text="Name song"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/txtTitle"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:layout_margin="30dp"
        android:id="@+id/previousButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_round_skip_previous_24" />
    <ImageButton
        android:id="@+id/nextButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="350dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_baseline_skip_next_24"/>
    <ImageButton
        android:id="@+id/stopButton"
        android:layout_marginBottom="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_baseline_stop_circle_24"
        android:layout_marginLeft="240dp"
    />
    <ImageButton
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_baseline_play_circle_outline_24"
        android:layout_alignParentBottom="true"
        android:id="@+id/pauseButton"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    <SeekBar
        android:id="@+id/seekbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtTimeTotal"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/seekbar"
        android:layout_alignRight="@id/seekbar"
        android:layout_alignBottom="@+id/seekbar"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="23dp"
        android:text="00:00" />

    <TextView
        android:id="@+id/txtTimeSong"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/seekbar"
        android:layout_alignRight="@id/seekbar"
        android:layout_alignBottom="@+id/seekbar"
        android:layout_marginEnd="370dp"
        android:layout_marginRight="370dp"
        android:layout_marginBottom="2dp"
        android:text="00:00" />

</RelativeLayout>